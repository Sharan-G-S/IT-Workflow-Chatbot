# IT Workflow Assistant Environment Configuration
# Copy this file to .env and update with your actual values

# Basic Configuration
PORT=3000
SESSION_SECRET=your-secure-random-string-here
BASE_URL=http://localhost:3000

# OpenAI Configuration (Optional - app works in fallback mode without this)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Redis Configuration (Optional - falls back to in-memory cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (Optional - disables email notifications if not configured)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@itworkflow.com

# Jira Integration (Optional)
JIRA_ENABLED=false
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=ITSUPPORT

# ServiceNow Integration (Optional)
SERVICENOW_ENABLED=false
SERVICENOW_INSTANCE_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=your-servicenow-username
SERVICENOW_PASSWORD=your-servicenow-password

# Sync Configuration
SYNC_ENABLED=false

# Database (auto-created in data/ directory)
# No configuration needed for SQLite
